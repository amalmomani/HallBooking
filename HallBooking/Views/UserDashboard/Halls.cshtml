@model IEnumerable<HallBooking.Models.Hall>
@{
    Layout = "~/Views/Shared/User.cshtml";

}



<div class="hero-wrap js-fullheight" style="background-image: url('/Home_Assests/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Hotel</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Hotels</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 sidebar order-md-last ftco-animate">
                <div class="sidebar-wrap ftco-animate">
                    <h3 class="heading mb-4">Find Hall</h3>
                    <form asp-action="Halls" method="post">
                        <div class="fields">
                            <div class="form-group">
                                <input type="text" name="Halls" class="form-control" placeholder="Search in Hall...">
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-primary py-3 px-5">
                            </div>
                        </div>
                    </form>
                </div>

            </div><!-- END-->
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm col-md-6 col-lg-4 ftco-animate">


                            <div class="destination">


                                @*<a href="#" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: @Url.Content("~/images/" + item.Imagepath);">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-link"></span>
                                </div>
                            </a>*@
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3><a>@item.Hallname</a></h3>
                                            <p class="rate">
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star-o"></i>
                                                <span>@item.Hallddress with @item.Hallsize</span>
                                            </p>
                                        </div>
                                        @*<div class="two">
                                        <span class="price per-price">$@item.Price<br><small>/night</small></span>
                                    </div>*@
                                    </div>
                                    <p>Far far away, behind the word mountains, far from the countries</p>
                                    <hr>
                                    <p class="bottom-area d-flex">
                                        <span><i class="icon-map-o"></i> Miami, Fl</span>
                                        <span class="ml-auto"><a href="/UserDashboard/Add/@item.Hallid">Book now </a></span>
                                    </p>
                                </div>
                            </div>

                        </div>
                    }
                </div>




            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
