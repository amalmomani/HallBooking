@model IEnumerable<HallBooking.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User.cshtml";
}


<div class="hero-wrap js-fullheight" style="background-image: url('/Home_Assests/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Hotel</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">My book</h1>
            </div>
        </div>
    </div>
</div>
<a href="/UserDashboard/payment" style="background-color:dodgerblue;  padding:20px; color:azure; ">Pay now </a>

<table class="table" style=" margin:20px">
    <thead>
        <tr>
            <th>
                Date from
            </th>
            <th>
                Date to
            </th>

            <th>
                Hall
            </th><th>
                Price
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (ViewBag.Userid == item.Userid)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Startdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enddate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Hall.Hallname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.Price)
            </td>
            @if (item.Status == "Paied")
            {
                <td>
                    paied

                </td>
            }
            else if (item.Status == "Under Process")
            {
                <td>
                    Under Process

                </td>
            }
            else if (item.Status == "Accept")
            {
                <td>
                    Unpaied

                </td>
            }
        </tr>
            }
        }

    </tbody>
</table>


