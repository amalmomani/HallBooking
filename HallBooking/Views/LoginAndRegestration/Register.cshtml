@model HallBooking.Models.Useraccount

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V16</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animate/animate.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animsition/css/animsition.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/select2/select2.min.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/vendor/daterangepicker/daterangepicker.css">
    <!--=========================================~/login/======================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/login/images/bg-01.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Account Login
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5" asp-action="Register" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input class="input100" asp-for="Fullname" placeholder="User name" />
                            <span class="focus-input100" asp-validation-for="Fullname" data-placeholder="&#xe82a;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input type="number" class="input100" asp-for="Phonenumber" placeholder="Phone Number" />
                            <span class="focus-input100" asp-validation-for="Phonenumber" data-placeholder="&#xe82a;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input type="file" class="input100" asp-for="ImageFile" placeholder="Image File" accept="image/*" />
                            <span class="focus-input100" asp-validation-for="ImageFile" data-placeholder="&#xe82a;"></span>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input type="email" class="input100" asp-for="Email" placeholder="Email" />
                            <span class="focus-input100" asp-validation-for="Email" data-placeholder="&#xe82a;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input type="password" class="input100" asp-for="Password" placeholder="Password" />
                            <span class="focus-input100" asp-validation-for="Password" data-placeholder="&#xe82a;"></span>
                        </div>
                    </div>


                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn" asp-action="Register">
                            Register
                        </button>
                    </div>

                </form>
                <p class="login-card-footer-text" style="padding-top:10px">Already have an account? <a href="\LoginAndRegestration\Login" class="text-reset"><strong>Login here</strong></a></p>

            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/vendor/animsition/js/animsition.min.js"></script>
    <!--=========~/login/======================================================================================-->
    <script src="~/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--=========~/login/======================================================================================-->
    <script src="~/login/vendor/select2/select2.min.js"></script>
    <!--=========~/login/======================================================================================-->
    <script src="~/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--=========~/login/======================================================================================-->
    <script src="~/login/vendor/countdowntime/countdowntime.js"></script>
    <!--=========~/login/======================================================================================-->
    <script src="~/login/js/main.js"></script>
    
</body>
</html>