@model IEnumerable<HallBooking.Models.JoinTable>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="panel panel-default">
    <form asp-action="JoinTable" method="post">
        <div class="row" style="Justify-content: space-between; display:flex">
            <div class="form-group col-4">
                <label class="form-label" for="startDate"> Start Date</label>
                <input type="date" name="startDate" class="form-control search-box" placeholder="Search..." />
            </div>
            <div class="form-group col-4" style="">
                <label class="form-label" for="endDate">End Date</label>
                <input type="date" name="endDate" class="form-control search-box" placeholder="Search..." />
            </div>
            <div class="form-group col-4" style="margin-top:30px">
                <button type="submit" class="btn btn-danger">Search</button>
            </div>
        </div>
    </form>

    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>  Name</th>
                        <th> Category Name</th>
                        <th> Halls Name </th>
                        <th> Price</th>
                        <th> Start Date</th>
                        <th> End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.booking.Status == "Paied" || item.booking.Status == "Accept")
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.user.Fullname)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.category.Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.halls.Hallname)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.halls.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.booking.Startdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.booking.Enddate)
                                </td>
                            </tr>
                            }
                        }
                </tbody>
                <tfoot>
                    <tr>
                        <td> Total </td>
                        @*<td>@ViewBag.total</td>*@
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td> total number of peices </td>
                        @*<td>@ViewBag.amount</td>*@
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>