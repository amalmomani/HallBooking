@model HallBooking.Models.Contactu

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "~/Views/Shared/Home.cshtml";
}


<div class="hero-wrap js-fullheight" style="background-image: url('/images/E.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Contact Us</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">

        <div class="row block-9">
            <div class="col-md-6 order-md-last pr-md-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input  asp-for="Name" type="text" class="form-control" placeholder="Your Name" id="Name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <input  asp-for="Email" type="text" class="form-control" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <input  asp-for="Subject" type="text" class="form-control" placeholder="Subject" required>
                    </div>
                    <div   class="form-group">
                        <textarea asp-for="Message" name="Message" id="Message" cols="30" rows="7" class="form-control" placeholder="Message" required></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary"  />
                    </div>
                </form>

            </div>

            <div class="col-md-6">
                <div id="map"></div>
            </div>
        </div>
    </div>
</section>
