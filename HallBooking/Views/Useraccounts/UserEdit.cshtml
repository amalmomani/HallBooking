@model HallBooking.Models.Useraccount

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/User.cshtml";

}

<div class="hero-wrap js-fullheight" style="background-image: url('/Home_Assests/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/Useraccounts/UserEdit/@ViewBag.Userid">Home</a></span> <span>Hotel</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Edit Profile</h1>
            </div>
        </div>
    </div>
</div>

<div class="col-md-9 personal-info">
    <form asp-action="UserEdit" enctype="multipart/form-data" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Userid" />
        <img src=@Url.Content("~/Image/" + Model.Image) class="rounded-circle" style="width:200px; height:200px; object-fit:contain" />
        <div class="form-group">
            <label asp-for="ImageFile" class="col-lg-3">Profile Picture</label>
            <div class="col-md-8">
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <h6>Upload a different photo...</h6>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Fullname" class="col-lg-3">Full name</label>
            <div class="col-lg-8">
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phonenumber" class="col-lg-3">Phone number</label>
            <div class="col-lg-8">
                <input type="number" asp-for="Phonenumber" class="form-control" />
                <span asp-validation-for="Phonenumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-lg-3">Email</label>
            <div class="col-lg-8">
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-lg-3">Password</label>
            <div class="col-md-8">
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Roleid" class="control-label"></label>
            <select asp-for="Roleid" class="form-control" asp-items="ViewBag.Roleid"></select>
            <span asp-validation-for="Roleid" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <input type="submit" value="Save" class="btn btn-primary " />
                <a href="/Category1/Category" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </form>
</div>
